        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var getAllUserForm = document.getElementById('get-all-users-form');

                var editUserBtn = document.querySelectorAll('.edit-user-btn');
                var infoOrder = document.querySelectorAll('.info-order-btn');
                var deleteUserForm = document.getElementById('delete-user-form');
                var deleteButtons = document.querySelectorAll('button[data-modal-toggle="delete-user-modal"]');
                var editStatus = document.querySelectorAll('.edit-status-btn');
                deleteButtons.forEach(function (button) {
                    button.addEventListener('click', function () {
                        var orderId = this.getAttribute('data-_id');
                        var confirmButton = document.querySelector('#delete-user-modal a.bg-red-600');
                        confirmButton.addEventListener('click', function (event) {
                            event.preventDefault();
                            deleteUserForm.action = '/admin/delete-order/' + orderId + '?_method=DELETE';
                            deleteUserForm.submit();
                        });
                    });
                });

                //save status
                let currentOrderId = null;
                const saveStatusBtn = document.getElementById('save-all-btn');
                const statusSelect = document.getElementById("status-update");
                // Khi bấm nút "Lưu trạng thái"
                saveStatusBtn.addEventListener("click", async function () {
                    if (!currentOrderId) {
                        alert("Chưa chọn đơn hàng để cập nhật!");
                        return;
                    }
                    const newStatus = statusSelect.value;

                    try {
                        const res = await fetch("/admin/update-status/" + currentOrderId, {
                            method: "PATCH",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ status: newStatus })
                        });

                        const data = await res.json();
                        if (res.ok) {
                            alert("Cập nhật thành công: " + data.status);
                            location.reload();
                        } else {
                            alert("Lỗi: " + data.message);
                        }
                    } catch (err) {
                        console.error(err);
                        alert("Có lỗi khi cập nhật trạng thái!");
                    }
                });
                //edit status
                const status = document.getElementById("status");
                editStatus.forEach(btn => {
                    btn.addEventListener("click", async function () {
                        currentOrderId = this.getAttribute("data-_id");
                        const res = await fetch("/admin/get-status/" + currentOrderId, {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ currentOrderId })
                        });
                        const getOrder = await res.json();
                        status.value = getOrder.status
                    });
                });

                //info 
                const nameInput = document.getElementById("name");
                const addressInput = document.getElementById("address");
                const phoneInput = document.getElementById("phone-number");
                const cityInput = document.getElementById("city");
                const totalPrice = document.getElementById("totalPrice");
                const email = document.getElementById('email');
                const productItemContainers = document.getElementById("product-item");
                infoOrder.forEach(btn => {
                    btn.addEventListener("click", async function () {
                        const orderId = this.getAttribute("data-_id");
                        const res = await fetch("/admin/info-order/" + orderId, {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ orderId })
                        });
                        const getOrder = await res.json();
                        nameInput.value = getOrder.billDetails.name;
                        addressInput.value = getOrder.billDetails.address;
                        phoneInput.value = getOrder.billDetails.phoneNumber;
                        cityInput.value = getOrder.billDetails.city;
                        totalPrice.value = getOrder.totalPrice;
                        email.value = getOrder.billDetails.email;

                        let html = '';
                        for (let item of getOrder.item) {
                            let discount = item.productId.discountPercent;
                            let price = item.productId.price;
                            let finalPrice = (price - (price * discount) / 100).toFixed(2);
                            html += `
        <div class="flex items-center gap-3 bg-gray-50 border border-gray-200 rounded-xl p-3 shadow-md">
            <img class="h-10 w-10 rounded-full" src="${item.productId.images[0].url}" alt="Product Image"
                class="w-16 h-16 object-cover rounded-md border">
            <div>
                <h4 class="text-base font-semibold text-gray-900">${item.productId.name}</h4>
                <p class="text-sm text-gray-500">Quantity: ${item.quantity}</p>
                <p class="text-sm text-gray-500">Price: $${finalPrice}</p>
            </div>
        </div>
    `;
                        }
                        productItemContainers.innerHTML = html;
                    });
                });


                //check box 
                const checkboxAll = document.getElementById("checkbox-all");
                const checkboxes = document.querySelectorAll('tbody input[type="checkbox"]');

                checkboxAll.addEventListener("change", function () {
                    checkboxes.forEach(cb => cb.checked = checkboxAll.checked);
                });

                checkboxes.forEach(cb => {
                    cb.addEventListener("change", function () {

                        if ([...checkboxes].every(item => item.checked)) {
                            checkboxAll.checked = true;
                        } else {
                            checkboxAll.checked = false;
                        }
                    });
                });

                // search
                const searchInput = document.getElementById("users-search");
                const tableRows = document.querySelectorAll("table tbody tr"); // chỉnh selector cho đúng table

                searchInput.addEventListener("input", function () {
                    const query = this.value.toLowerCase().trim();

                    tableRows.forEach(row => {
                        const name = row.querySelector("td:nth-child(2) .text-base").textContent.toLowerCase();
                        const orderId = row.querySelector(".order-id").textContent.toLowerCase();
                        const email = row.querySelector("td:nth-child(2) .text-sm").textContent.toLowerCase();

                        if (name.includes(query) || email.includes(query) || orderId.includes(query)) {
                            row.style.display = "";
                        } else {
                            row.style.display = "none";
                        }
                    });
                });
            });
