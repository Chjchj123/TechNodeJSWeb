<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Admin Order List</title>
    <link rel="stylesheet" href="https://themewagon.github.io/windster/app.css">
</head>

<body class="bg-gray-50">

    <div id="main-content" class="h-full w-full bg-gray-50 relative overflow-y-auto lg:ml-64">
        <main>
            <div class="p-4 bg-white border-b border-gray-200">
                <h1 class="text-2xl font-semibold text-gray-900">All orders</h1>
            </div>

            <div class="flex flex-col">
                <div class="overflow-x-auto">
                    <div class="align-middle inline-block min-w-full">
                        <div class="shadow overflow-hidden">
                            <table class="table-fixed min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="p-4">#</th>
                                        <th class="p-4 text-left text-xs font-medium text-gray-500 uppercase">Customer
                                        </th>
                                        <th class="p-4 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                                        <th class="p-4 text-left text-xs font-medium text-gray-500 uppercase">Status
                                        </th>
                                        <th class="p-4 text-left text-xs font-medium text-gray-500 uppercase">Created
                                        </th>
                                        <th class="p-4"></th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <tr class="hover:bg-gray-100">
                                        <td class="p-4"><input type="checkbox" class="h-4 w-4"></td>
                                        <td class="p-4">
                                            <div class="text-base font-semibold">Nguyen Van A</div>
                                            <div class="text-sm text-gray-500">vana@example.com</div>
                                        </td>
                                        <td class="p-4 text-base font-medium">$1800</td>
                                        <td class="p-4">
                                            <span
                                                class="px-2 py-1 rounded text-sm bg-yellow-100 text-yellow-700">Pending</span>
                                        </td>
                                        <td class="p-4 text-sm">2025-09-30</td>
                                        <td class="p-4 space-x-2">
                                            <button type="button" data-modal-toggle="order-modal"
                                                class="text-white bg-cyan-600 hover:bg-cyan-700 px-3 py-2 rounded-lg text-sm">
                                                Edit
                                            </button>
                                            <button type="button" data-modal-toggle="delete-order-modal"
                                                class="text-white bg-red-600 hover:bg-red-800 px-3 py-2 rounded-lg text-sm">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                    <tr class="hover:bg-gray-100">
                                        <td class="p-4"><input type="checkbox" class="h-4 w-4"></td>
                                        <td class="p-4">
                                            <div class="text-base font-semibold">Tran Thi B</div>
                                            <div class="text-sm text-gray-500">thib@example.com</div>
                                        </td>
                                        <td class="p-4 text-base font-medium">$950</td>
                                        <td class="p-4">
                                            <span
                                                class="px-2 py-1 rounded text-sm bg-green-100 text-green-700">Completed</span>
                                        </td>
                                        <td class="p-4 text-sm">2025-09-25</td>
                                        <td class="p-4 space-x-2">
                                            <button type="button" data-modal-toggle="order-modal"
                                                class="text-white bg-cyan-600 hover:bg-cyan-700 px-3 py-2 rounded-lg text-sm">
                                                Edit
                                            </button>
                                            <button type="button" data-modal-toggle="delete-order-modal"
                                                class="text-white bg-red-600 hover:bg-red-800 px-3 py-2 rounded-lg text-sm">
                                                Delete
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Order Modal -->
            <div class="hidden fixed top-4 left-0 right-0 z-50 justify-center items-center h-modal sm:h-full"
                id="order-modal">
                <div class="relative w-full max-w-4xl px-4 h-full md:h-auto">
                    <div class="bg-white rounded-lg shadow">
                        <div class="flex justify-between p-5 border-b">
                            <h3 class="text-xl font-semibold">Edit order</h3>
                            <button type="button" data-modal-toggle="order-modal"
                                class="text-gray-400 hover:text-gray-900">✕</button>
                        </div>
                        <div class="p-6">
                            <form>
                                <div class="grid grid-cols-2 gap-6">
                                    <div>
                                        <label class="block text-sm font-medium">Customer Name</label>
                                        <input type="text" readonly value="Nguyen Van A"
                                            class="w-full border-gray-300 rounded-lg p-2.5 bg-gray-100">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium">Email</label>
                                        <input type="email" readonly value="vana@example.com"
                                            class="w-full border-gray-300 rounded-lg p-2.5 bg-gray-100">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium">Phone</label>
                                        <input type="text" readonly value="0987654321"
                                            class="w-full border-gray-300 rounded-lg p-2.5 bg-gray-100">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium">Address</label>
                                        <input type="text" readonly value="123 Đường Láng, Hà Nội"
                                            class="w-full border-gray-300 rounded-lg p-2.5 bg-gray-100">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium">Status</label>
                                        <select class="w-full border-gray-300 rounded-lg p-2.5">
                                            <option selected>Pending</option>
                                            <option>Confirmed</option>
                                            <option>Shipping</option>
                                            <option>Completed</option>
                                            <option>Cancelled</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mt-6">
                                    <h4 class="text-lg font-semibold mb-2">Order Items</h4>
                                    <table class="w-full border text-sm">
                                        <thead class="bg-gray-100">
                                            <tr>
                                                <th class="p-2 text-left">Product</th>
                                                <th class="p-2 text-left">Qty</th>
                                                <th class="p-2 text-left">Price</th>
                                                <th class="p-2 text-left">Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="p-2">RTX 4070 Ti</td>
                                                <td class="p-2">1</td>
                                                <td class="p-2">$1200</td>
                                                <td class="p-2">$1200</td>
                                            </tr>
                                            <tr>
                                                <td class="p-2">Intel i9 13900K</td>
                                                <td class="p-2">1</td>
                                                <td class="p-2">$600</td>
                                                <td class="p-2">$600</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                        <div class="p-6 border-t">
                            <button type="button"
                                class="bg-cyan-600 hover:bg-cyan-700 text-white px-5 py-2.5 rounded-lg">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Order Modal -->
            <div class="hidden fixed top-4 left-0 right-0 z-50 justify-center items-center h-modal sm:h-full"
                id="delete-order-modal">
                <div class="relative w-full max-w-md px-4 h-full md:h-auto">
                    <div class="bg-white rounded-lg shadow">
                        <div class="flex justify-end p-2">
                            <button type="button" data-modal-toggle="delete-order-modal"
                                class="text-gray-400 hover:text-gray-900">✕</button>
                        </div>
                        <div class="p-6 text-center">
                            <h3 class="text-lg font-normal text-gray-500 mb-6">Are you sure you want to delete this
                                order?</h3>
                            <a href="#" class="bg-red-600 hover:bg-red-800 text-white px-3 py-2 rounded-lg mr-2">Yes,
                                delete</a>
                            <a href="#" data-modal-toggle="delete-order-modal"
                                class="bg-gray-100 hover:bg-gray-200 text-gray-900 px-3 py-2 rounded-lg">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://themewagon.github.io/windster/app.bundle.js"></script>
</body>

</html>