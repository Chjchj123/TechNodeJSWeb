        <script async defer src="https://buttons.github.io/buttons.js"></script>
        <script src="https://themewagon.github.io/windster/app.bundle.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var getAllUserForm = document.getElementById('get-all-users-form');
                var getAllUserBtn = document.querySelector('button[data-modal-toggle="delete-all-user-modal"]');
                var editProducts = document.querySelectorAll('.edit-user-btn');
                getAllUserBtn.addEventListener('click', function () {
                    var confirmButton = document.querySelector('#delete-all-user-modal a.bg-red-600');
                    confirmButton.addEventListener('click', function (event) {
                        event.preventDefault();
                        getAllUserForm.action = '/admin/delete-all?_method=DELETE';
                        getAllUserForm.submit();
                    });
                });

                //delete
                var deleteUserForm = document.getElementById('delete-user-form');
                var deleteButtons = document.querySelectorAll('button[data-modal-toggle="delete-user-modal"]');
                deleteButtons.forEach(function (button) {
                    button.addEventListener('click', function () {
                        var productId = this.getAttribute('data-_id');
                        var confirmButton = document.querySelector('#delete-user-modal a.bg-red-600');
                        confirmButton.addEventListener('click', function (event) {
                            event.preventDefault();
                            deleteUserForm.action = '/admin/delete-product/' + productId + '?_method=DELETE';
                            deleteUserForm.submit();
                        });
                    });
                });

                //delete all selected
                var restoreAllBtn = document.querySelector('.restore-all-btn');
                var restoreAllForm = document.getElementById('restore-all-form');

                var deleteAllBtn = document.querySelector('button[data-modal-toggle="delete-all-user-modal"]');
                deleteAllBtn.addEventListener('click', function () {
                    var confirmButton = document.querySelector('#delete-all-user-modal a.bg-red-600');
                    confirmButton.addEventListener('click', function (event) {
                        event.preventDefault();
                        restoreAllForm.submit();
                    });
                });

                //edit 
                const editUserForm = document.getElementById("edit-user-form");
                const saveAllBtn = document.getElementById("save-all-btn");
                const nameInput = document.getElementById("name");
                const categoryInput = document.getElementById("category");
                const brandInput = document.getElementById("brand");
                const priceInput = document.getElementById("price");
                const stockInput = document.getElementById("stock");
                const detailsInput = document.getElementById("details");
                const specificationsInput = document.getElementById("specifications");
                const discountInput = document.getElementById("discount");
                const getId = document.getElementById("ID");
                let getImages;
                editProducts.forEach(btn => {
                    btn.addEventListener("click", async function () {
                        const productId = this.getAttribute("data-_id");
                        const res = await fetch("/admin/get-product/" + productId, {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ productId })
                        });
                        const getProduct = await res.json();
                        getId.value = getProduct._id;
                        nameInput.value = getProduct.name;
                        categoryInput.value = getProduct.category;
                        brandInput.value = getProduct.brand;
                        priceInput.value = getProduct.price;
                        stockInput.value = getProduct.stock;
                        detailsInput.value = getProduct.details.description;
                        specificationsInput.value = getProduct.details.specifications;
                        discountInput.value = getProduct.discountPercent;
                        const currentImagesDiv = document.getElementById("current-images");
                        currentImagesDiv.innerHTML = "";
                        getImages = getProduct.images;
                        const imgEl = document.getElementsByClassName("w-20 h-20 object-cover rounded");
                        while (imgEl.length < getImages.length) {
                            currentImagesDiv.innerHTML = "";
                            getImages.forEach((img, index) => {
                                const wrapper = document.createElement("div");
                                wrapper.className = "relative inline-block mr-2";

                                const imgElement = document.createElement("img");
                                imgElement.src = img.url;
                                imgElement.className = "w-20 h-20 object-cover rounded cursor-pointer";

                                const fileInput = document.createElement("input");
                                fileInput.type = "file";
                                fileInput.name = `images[${index}]`;
                                fileInput.className = "hidden";

                                fileInput.addEventListener("change", (e) => {
                                    if (e.target.files && e.target.files[0]) {
                                        const newUrl = URL.createObjectURL(e.target.files[0]);
                                        imgElement.src = newUrl;
                                    }
                                });
                                imgElement.addEventListener("click", () => fileInput.click());

                                // nút xóa 
                                const deleteBtn = document.createElement("button");
                                deleteBtn.textContent = "✕";
                                deleteBtn.type = "button";
                                deleteBtn.className = "absolute top-0 right-0 bg-red-500 text-white rounded-full px-1";
                                deleteBtn.addEventListener("click", () => wrapper.remove());

                                wrapper.appendChild(imgElement);
                                wrapper.appendChild(fileInput);
                                wrapper.appendChild(deleteBtn);
                                currentImagesDiv.appendChild(wrapper);
                            });
                        }
                        saveAllBtn.addEventListener("click", function () {
                            editUserForm.action = "/admin/update-product/" + getProduct._id + "?_method=PUT";
                            editUserForm.submit();
                        });
                    });
                });


                //check box 
                const checkboxAll = document.getElementById("checkbox-all");
                const checkboxes = document.querySelectorAll('tbody input[type="checkbox"]');

                checkboxAll.addEventListener("change", function () {
                    checkboxes.forEach(cb => cb.checked = checkboxAll.checked);
                });

                checkboxes.forEach(cb => {
                    cb.addEventListener("change", function () {

                        if ([...checkboxes].every(item => item.checked)) {
                            checkboxAll.checked = true;
                        } else {
                            checkboxAll.checked = false;
                        }
                    });
                });

                // search
                const searchInput = document.getElementById("users-search");
                const tableRows = document.querySelectorAll("table tbody tr"); // chỉnh selector cho đúng table

                searchInput.addEventListener("input", function () {
                    const query = this.value.toLowerCase().trim();

                    tableRows.forEach(row => {
                        const name = row.querySelector("td:nth-child(2) .text-base").textContent.toLowerCase();
                        const email = row.querySelector("td:nth-child(2) .text-sm").textContent.toLowerCase();

                        if (name.includes(query) || email.includes(query)) {
                            row.style.display = "";
                        } else {
                            row.style.display = "none";
                        }
                    });
                });
            });
        </script>
