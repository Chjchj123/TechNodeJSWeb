<!-- Hero Section -->
<div class="hero-wrapper">
    <section class="hero">
        <div class="container">
            <div class="hero-slideshow">
                <div class="slides-wrapper">
                    <% bannerProducts.forEach(function(product, index) { %>
                        <div class="slide <%= index === 0 ? 'active' : '' %>">
                            <div class="hero-content">
                                <div class="hero-text">
                                    <h1 class="banner-title product-title">
                                        <%= product.name %>
                                    </h1>
                                    <div class="price-container">
                                        <h2 class="original-price">
                                            <%= product.price %>$
                                        </h2>
                                        <h2 class="final-price">
                                            <% let discount=product.discountPercent || 0; let
                                                originalPrice=product.price || 0; let finalPrice=originalPrice * (1 -
                                                discount / 100); finalPrice=finalPrice.toFixed(2); %>
                                                Chỉ Còn <%= finalPrice %>$
                                        </h2>
                                    </div>
                                    <div class="discount-badge">
                                        Giảm Giá Tới <%= product.discountPercent %>%
                                    </div>
                                    <p class="product-description product-title ">
                                        <%= product.details.description || 'Sản phẩm chất lượng cao' %>
                                    </p>
                                    <a href="/shop/<%= product.category %>/<%= product._id %>" class="shop-now-btn">
                                        Mua Ngay <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                                <div class="hero-image">
                                    <img src="<%= product.images[0].url %>" alt="<%= product.name %>">
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <!-- Nút điều hướng -->
                <button class="prev">&#10094;</button>
                <button class="next">&#10095;</button>

                <!-- Indicators -->
                <div class="slide-indicators">
                    <% bannerProducts.forEach(function(product, index) { %>
                        <div class="indicator <%= index === 0 ? 'active' : '' %>"></div>
                        <% }) %>
                </div>
            </div>
        </div>
    </section>
</div>


